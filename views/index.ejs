<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafe Delight</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
        }
        .navbar {
            background: #6f4e37;
        }
        .navbar-brand, .nav-link, .navbar-toggler {
            color: #fff !important;
        }
        .hero {
            background: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1200&q=80') center/cover no-repeat;
            color: #fff;
            padding: 100px 0;
            text-shadow: 2px 2px 8px #333;
        }
        .menu-card img {
            height: 180px;
            object-fit: cover;
        }
        .footer {
            background: #6f4e37;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }
        .btn-order {
            background: #6f4e37;
            color: #fff;
        }
        .btn-order:hover {
            background: #563927;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">Cafe Delight</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#menu">Menu</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero text-center">
        <div class="container">
            <h1 class="display-4">Welcome to Cafe Delight</h1>
            <p class="lead">Freshly brewed coffee & delicious treats, just for you.</p>
            <a href="#menu" class="btn btn-order btn-lg mt-3">View Menu</a>
        </div>
    </section>

    <!-- Menu Section -->
    <section id="menu" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Our Menu</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card menu-card h-100">
                        <img src="https://images.unsplash.com/photo-1511920170033-f8396924c348?auto=format&fit=crop&w=600&q=80" class="card-img-top" alt="Coffee">
                        <div class="card-body">
                            <h5 class="card-title">Cappuccino</h5>
                            <p class="card-text">Rich espresso with steamed milk and a creamy foam topping.</p>
                            <button class="btn btn-order w-100" onclick="orderItem('Cappuccino')">Order</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card menu-card h-100">
                        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=600&q=80" class="card-img-top" alt="Pastry">
                        <div class="card-body">
                            <h5 class="card-title">Chocolate Croissant</h5>
                            <p class="card-text">Flaky pastry filled with rich chocolate, baked fresh daily.</p>
                            <button class="btn btn-order w-100" onclick="orderItem('Chocolate Croissant')">Order</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card menu-card h-100">
                        <img src="https://images.unsplash.com/photo-1464306076886-debca5e8a6b0?auto=format&fit=crop&w=600&q=80" class="card-img-top" alt="Sandwich">
                        <div class="card-body">
                            <h5 class="card-title">Veggie Sandwich</h5>
                            <p class="card-text">Fresh veggies and cheese in artisan bread, perfect for lunch.</p>
                            <button class="btn btn-order w-100" onclick="orderItem('Veggie Sandwich')">Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">About Us</h2>
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <p>
                        Cafe Delight is your neighborhood spot for the best coffee and pastries. We use only the freshest ingredients and our baristas are passionate about crafting the perfect cup for you. Come relax, work, or catch up with friends in our cozy space!
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Contact Us</h2>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form id="contactForm">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-order w-100">Send Message</button>
                    </form>
                    <div id="contactAlert" class="alert alert-success mt-3 d-none" role="alert">
                        Thank you for contacting us! We'll get back to you soon.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            &copy; 2024 Cafe Delight. All rights reserved.
        </div>
    </footer>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Order button interaction
        function orderItem(item) {
            alert('You have ordered: ' + item + '. Thank you!');
        }

        // Contact form interaction
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('contactAlert').classList.remove('d-none');
            this.reset();
        });
    </script>
</body>
</html>